# Paperclip Configuration
# Copy this file to .env and customize the values

# Application
APP_NAME=Paperclip
APP_VERSION=0.1.0
DEBUG=false
ENVIRONMENT=development

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_RELOAD=true

# UI Server  
UI_HOST=0.0.0.0
UI_PORT=8501

# Security (REQUIRED - change in production)
SECRET_KEY=your-secret-key-here-change-this-in-production-make-it-long-and-random
CORS_ORIGINS=*

# Database (Supabase-compatible Postgres)
DATABASE__URL=postgresql://postgres:postgres@localhost:5433/paperclip
DATABASE__NAMESPACE=paperclip
DATABASE__DATABASE=main
DATABASE__USERNAME=root
DATABASE__PASSWORD=root

# AI Providers (at least one required for content processing)
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Video Providers (optional, for AI video generation)
RUNWAY_API_KEY=your-runway-api-key-here
PIKA_API_KEY=your-pika-api-key-here
LUMA_API_KEY=your-luma-api-key-here

# File Storage
UPLOAD_DIR=uploads
OUTPUT_DIR=output
TEMP_DIR=temp
MAX_UPLOAD_SIZE=104857600  # 100MB

# Processing
MAX_CONCURRENT_JOBS=5
JOB_TIMEOUT=3600
MIN_CHAPTER_LENGTH=300
MAX_CHAPTER_LENGTH=2000
DEFAULT_SCRIPT_TEMPLATE=educational

# Video Generation
VIDEO_OUTPUT_DIR=output/videos
DEFAULT_VIDEO_QUALITY=1080p
DEFAULT_ASPECT_RATIO=16:9

# Caching
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
# LOG_FILE=logs/paperclip.log

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
