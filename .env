# Paperclip Configuration for Docker Development

# Application
APP_NAME=Paperclip
APP_VERSION=0.1.0
DEBUG=false
ENVIRONMENT=development

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_RELOAD=false

# Security
SECRET_KEY=development-secret-key-change-in-production
CORS_ORIGINS=["*"]

# Database (Docker container)
DATABASE__URL=postgresql://postgres:postgres@supabase-db:5432/paperclip

# AI Providers (placeholder - set real keys for functionality)
PROVIDERS__OPENAI__API_KEY=placeholder-key
PROVIDERS__ANTHROPIC__API_KEY=placeholder-key

# Video Providers (optional)
PROVIDERS__RUNWAY__API_KEY=placeholder-key
PROVIDERS__PIKA__API_KEY=placeholder-key
PROVIDERS__LUMA__API_KEY=placeholder-key

# File Storage
UPLOAD_DIR=uploads
OUTPUT_DIR=output
TEMP_DIR=temp
VIDEO_OUTPUT_DIR=output/videos

# Caching
REDIS_URL=redis://redis:6379/0

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json